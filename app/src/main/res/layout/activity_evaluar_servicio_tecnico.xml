<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EvaluarServicioTecnicoActivity"
    android:padding="18dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:gravity="center"
                android:text="@string/evaluaci_n_del_servicio"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <RatingBar
                android:id="@+id/ratingEvaluacionServicioTecnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1" />

            <EditText
                android:id="@+id/edtComentarioEvalucaionTecnico"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/obsevaciones"
                android:inputType="textMultiLine"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/selecciona_la_categor_a_del_servicio"
                android:layout_marginTop="10dp"/>

            <CheckBox
                android:id="@+id/checkInternetEvaluacionTecnica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/internet" />

            <CheckBox
                android:id="@+id/checkComputadoraEvaluacionTecnica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/computadora" />

            <CheckBox
                android:id="@+id/checkProgramasEvaluacionTecnica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/programas" />

            <CheckBox
                android:id="@+id/checkImpresoraEvaluacionTecnica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/impresoraa" />

            <CheckBox
                android:id="@+id/checkCelularEvaluacionTecnica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/celular" />

            <CheckBox
                android:id="@+id/checkOfimatiaEvaluacionTecnica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ofimatica" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ingresa_la_comisi_n_por_servicio"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edtComisionEvaluacionTecnico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <Switch
                android:id="@+id/switchMaterialesExtras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/indica_si_se_usaron_materiales_extras" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:textColor="@android:color/black"
                    android:text="@string/precio_0" />

                <TextView
                    android:id="@+id/txtPrecioEvaluacionTecnico"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:text="@string/textview" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnFinalizarEvaluacionTecnico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="@string/finalizar"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnGenerarQuejaEvaluacionTecnico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="@string/generar_queja"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>